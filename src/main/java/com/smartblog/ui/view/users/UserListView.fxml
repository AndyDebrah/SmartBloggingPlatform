<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.smartblog.ui.view.users.UserListController"
      spacing="10" style="-fx-padding: 12;">
    <HBox spacing="8" alignment="CENTER_LEFT">
        <Button fx:id="backBtn" text="â† Back" styleClass="btn btn-secondary"/>
        <Label text="Manage Users" style="-fx-font-size: 18px; -fx-font-weight: 600;"/>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>
    
    <HBox spacing="8">
        <TextField fx:id="searchField" promptText="Search username/email..." HBox.hgrow="ALWAYS"/>
        <Button text="Search" fx:id="searchBtn"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="New User" fx:id="newBtn"/>
    </HBox>

    <TableView fx:id="table" prefHeight="500">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
            <TableColumn fx:id="colUsername" text="Username" prefWidth="200"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="280"/>
            <TableColumn fx:id="colRole" text="Role" prefWidth="120"/>
        </columns>
    </TableView>

    <HBox spacing="8">
        <Button text="Edit Email" fx:id="editBtn"/>
        <Button text="Delete" fx:id="deleteBtn" style="-fx-text-fill: -color-danger;"/>
    </HBox>
</VBox>
