<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.smartblog.ui.view.authors.AuthorDashboardController"
      style="-fx-background-color: #12151a;">
    <!-- author-overrides.css intentionally loaded programmatically to avoid FXMLLoader parsing issues -->

    <!-- Modern Header with vibrant gradient -->
    <top>
        <VBox style="-fx-background-color: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #a855f7 100%); -fx-padding: 28 36; -fx-effect: dropshadow(gaussian, rgba(99,102,241,0.4), 20, 0, 0, 8);">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="backBtn" text="â† Back" 
                        style="-fx-background-color: rgba(255,255,255,0.15); -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-font-weight: 600; -fx-padding: 10 20; -fx-background-radius: 10; -fx-border-color: rgba(255,255,255,0.3); -fx-border-radius: 10;" />
                <VBox spacing="6" HBox.hgrow="ALWAYS">
                    <Label fx:id="heading" text="Author Dashboard" 
                           style="-fx-font-size: 32px; -fx-font-weight: 700; -fx-text-fill: #ffffff;"/>
                    <Label text="Manage and publish your content" 
                           style="-fx-font-size: 15px; -fx-text-fill: rgba(255,255,255,0.85);"/>
                </VBox>
                <Button fx:id="refreshBtn" text="â†» Refresh" 
                        style="-fx-background-color: rgba(255,255,255,0.15); -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-font-weight: 600; -fx-padding: 10 20; -fx-background-radius: 10; -fx-border-color: rgba(255,255,255,0.3); -fx-border-radius: 10;" />
                <Button fx:id="newBtn" text="+ New Post" 
                        style="-fx-background-color: #ffffff; -fx-text-fill: #6366f1; -fx-font-size: 15px; -fx-font-weight: 700; -fx-padding: 12 28; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 3);" />
            </HBox>
        </VBox>
    </top>

    <center>
        <HBox spacing="24" style="-fx-padding: 24; -fx-background-color: #12151a;">
            <!-- Modern Dark Sidebar with ScrollPane -->
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" 
                       style="-fx-background-color: transparent; -fx-background: transparent; -fx-padding: 0;"
                       prefWidth="360" minWidth="340">
            <VBox spacing="20" 
                  style="-fx-background-color: linear-gradient(180deg, #1e222a 0%, #1a1d23 100%); -fx-background-radius: 16; -fx-padding: 24; -fx-border-color: #374151; -fx-border-radius: 16; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 16, 0, 0, 4);">
                
                <!-- Search & Filter Section -->
                <VBox spacing="14" style="-fx-background-color: rgba(255,255,255,0.03); -fx-background-radius: 12; -fx-padding: 18; -fx-border-color: #374151; -fx-border-width: 1; -fx-border-radius: 12;">
                    <Label text="ðŸ” SEARCH &amp; FILTER" style="-fx-font-size: 12px; -fx-font-weight: 700; -fx-text-fill: #94a3b8; -fx-letter-spacing: 0.5;"/>
                    
                    <TextField fx:id="searchKeywordField" promptText="Search by keyword..." 
                               style="-fx-background-radius: 8; -fx-background-color: #242830; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #64748b; -fx-border-color: #4b5563; -fx-border-radius: 8; -fx-padding: 12;"/>
                    
                    <ComboBox fx:id="searchTagCombo" promptText="Filter by tag" maxWidth="Infinity" 
                              style="-fx-background-radius: 8; -fx-background-color: #242830;"/>
                    
                    <TextField fx:id="searchAuthorField" promptText="Search by author..." 
                               style="-fx-background-radius: 8; -fx-background-color: #242830; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #64748b; -fx-border-color: #4b5563; -fx-border-radius: 8; -fx-padding: 12;"/>
                    
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="Sort:" style="-fx-font-size: 12px; -fx-text-fill: #94a3b8; -fx-font-weight: 500;"/>
                        <ComboBox fx:id="searchSortCombo" maxWidth="Infinity" 
                                  style="-fx-background-radius: 8; -fx-font-size: 12px; -fx-background-color: #242830;" HBox.hgrow="ALWAYS"/>
                    </HBox>
                    
                    <HBox spacing="10">
                        <Button fx:id="searchExecuteBtn" text="ðŸ” Search" 
                                style="-fx-background-color: linear-gradient(180deg, #6366f1 0%, #4f46e5 100%); -fx-text-fill: #ffffff; -fx-background-radius: 8; -fx-font-size: 13px; -fx-font-weight: 700; -fx-padding: 10 16;" 
                                HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                        <Button fx:id="searchClearBtn" text="Clear" 
                            style="-fx-background-color: rgba(255,255,255,0.08); -fx-text-fill: #e2e8f0; -fx-border-color: #4b5563; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 13px; -fx-padding: 10 16;"/>
                    </HBox>
                </VBox>
                
                <Label text="YOUR POSTS" style="-fx-font-size: 12px; -fx-font-weight: 700; -fx-text-fill: #94a3b8; -fx-letter-spacing: 0.5;"/>
                <ListView fx:id="postsList" prefHeight="180" 
                         style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 0; -fx-border-color: #374151; -fx-border-radius: 8;" />
                
                <!-- Quick Stats Card -->
                <VBox spacing="14" style="-fx-background-color: rgba(255,255,255,0.03); -fx-background-radius: 12; -fx-padding: 18; -fx-border-color: #374151; -fx-border-width: 1; -fx-border-radius: 12;">
                    <Label text="QUICK STATS" style="-fx-font-size: 12px; -fx-font-weight: 700; -fx-text-fill: #94a3b8; -fx-letter-spacing: 0.5;"/>
                    <HBox spacing="12" alignment="CENTER_LEFT">
                        <Label text="ðŸ“" style="-fx-font-size: 24px;"/>
                        <VBox spacing="2">
                            <Label fx:id="draftsCount" text="0" style="-fx-font-size: 24px; -fx-font-weight: 700; -fx-text-fill: #ffffff;"/>
                            <Label text="Drafts" style="-fx-font-size: 13px; -fx-text-fill: #94a3b8;"/>
                        </VBox>
                    </HBox>
                    <Separator style="-fx-background-color: #374151;"/>
                    <HBox spacing="12" alignment="CENTER_LEFT">
                        <Label text="ðŸ“¢" style="-fx-font-size: 24px;"/>
                        <VBox spacing="2">
                            <Label fx:id="publishedCount" text="0" style="-fx-font-size: 24px; -fx-font-weight: 700; -fx-text-fill: #22c55e;"/>
                            <Label text="Published" style="-fx-font-size: 13px; -fx-text-fill: #94a3b8;"/>
                        </VBox>
                    </HBox>
                    <Separator style="-fx-background-color: #374151;"/>
                    <VBox spacing="10">
                        <Label text="TOP TAGS" style="-fx-font-size: 12px; -fx-font-weight: 700; -fx-text-fill: #94a3b8; -fx-letter-spacing: 0.5;"/>
                        <ListView fx:id="topTagsList" prefHeight="100" 
                                 style="-fx-background-color: transparent; -fx-background-insets: 0;"/>
                    </VBox>
                </VBox>
            </VBox>
            </ScrollPane>

            <!-- Main Content Area - Dark Theme -->
            <VBox spacing="0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" 
                  style="-fx-background-color: linear-gradient(180deg, #1e222a 0%, #1a1d23 100%); -fx-background-radius: 16; -fx-border-color: #374151; -fx-border-radius: 16; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 16, 0, 0, 4);">
                <VBox spacing="12" style="-fx-padding: 24;">
                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <Label text="ALL POSTS" style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #ffffff;"/>
                        <Label text="â€¢" style="-fx-text-fill: #4b5563; -fx-font-size: 18px;"/>
                        <Label text="View and manage all blog posts" style="-fx-font-size: 14px; -fx-text-fill: #94a3b8;"/>
                    </HBox>
                </VBox>
                <Separator style="-fx-background-color: #374151;"/>
                <ListView fx:id="postsFullList" VBox.vgrow="ALWAYS" 
                         style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 16; -fx-background-radius: 0 0 16 16;"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>